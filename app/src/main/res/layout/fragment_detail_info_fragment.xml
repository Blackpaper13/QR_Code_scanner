<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_info_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/yellow_pudar"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Scanning Result"/>

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/baseline_close_24"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_horizontal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_dark"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="18dp"
            app:cardElevation="6dp"

            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_margin="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18dp"
                            android:text="Kode AT:"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/twKodeAT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="-1dp"
                            android:hint="Kode AT"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="Nama AT:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/twNamaAT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-1dp"
                            android:hint="Nama AT"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="Kategori AT:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/twKategoriAT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="-1dp"
                            android:hint="Kategori AT"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="Lokasi Toko:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/twLokasiToko"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-1dp"
                            android:hint="Lokasi AT"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="Lokasi Cabang:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/twLokasiCabang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-1dp"
                            android:hint="Lokasi Cabang"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="Pemilik AT:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/twPemilikAT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-1dp"
                            android:hint="Pemilik AT"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="Nomor Seri:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/twNomorSeri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-1dp"
                            android:hint="Nomor Seri"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="Tanggal Garansi:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/twTanggalGaransi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-1dp"
                            android:hint="Tanggal Garansi"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="Status Garansi:"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/twStatusGaransi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-1dp"
                            android:hint="Status Garansi"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>